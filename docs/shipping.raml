#%RAML 1.0
title: happy mall
version: 1.0
description: RESTful APIs of happymall

/shipping:
  /addAdress:
    description: add shipping address
    post:
      description: add shipping address
      queryParameters:
        Shipping:
          type: Shipping
          required: true
      responses:
        404:
          description: false
          body:
            application/json:
              example:
                {
                  "status": 1,
                  "msg": "add address fail"
                }
        200:
          description: success
          body:
            application/json:
              example:
                {
                  "status": 0,
                  "msg": "add address success",
                  "data": {
                      "shipping": 28
                  }
                }
  /deleteAdress:
    description: delete shipping address
    delete:
      description: delete shipping address
      queryParameters:
        shippingid:
          type: integer
          required: true
      responses:
        404:
          description: false
          body:
            application/json:
              example:
                {
                  "status": 1,
                  "msg": "delete address fail"
                }
        200:
          description: success
          body:
            application/json:
              example:
                {
                  "status": 0,
                  "msg": "delete address success",
                }

