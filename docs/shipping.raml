  /updateAdress:
    description: update shipping address
    put:
      description: update shipping address
      queryParameters:
        Shipping:
          type: Shipping
          required: true
      responses:
        404:
          description: false
          body:
            application/json:
              example:
                {
                  "status": 1,
                  "msg": "update address fail"
                }
        200:
          description: success
          body:
            application/json:
              example:
                {
                  "status": 0,
