types:
  Shipping:
    type: object
    properties:
      userId:
        description: user id
        type: integer
        required: true
      receiverName:
        description: user name
        type: string
        required: true
      receiverPhone:
        description: user phone
        type: string
      receiverMobile:
        description: user mobile
        type: string
      receiverProvince:
        description: user province
        type: string
        required: true
      receiverCity:
        description: user city
        type: string
        required: true
      receiverAddress:
        description: user address
        type: string
        required: true
      receiverZip:
        description: user zip
        type: integer
        required: true